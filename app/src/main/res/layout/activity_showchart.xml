<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pichart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ScrollView
        android:layout_width="290dp"
        android:layout_height="237dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pichart"
        tools:ignore="ExtraText">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id ="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="2022-05-30 12:03"/>
            <TextView
                android:id ="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="2022-05-30 12:13"/>
            <TextView
                android:id ="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="2022-05-30 12:41"/>
            <TextView
                android:id ="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="2022-05-30 19:13"/>
            <TextView
                android:id ="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="2022-06-01 20:19"/>
            
        </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
